{
  "metadata": [
    {
      "src": [
        {
          "files": [ "/**.csproj" ],
          "src": "../Client.Scripting/"
        }
      ],
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "noRestore": false,
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "allowCompilationErrors": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "logo.svg",
          "favicon.ico"
        ]
      }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appTitle": "PE Script Reference"
    },
    "template": [
      "default",
      "templates/darkerfx"
    ],
    "keepFileLink": false,
    "disableGitFeatures": false
  }
}